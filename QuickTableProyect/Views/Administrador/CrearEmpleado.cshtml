@model QuickTableProyect.Dominio.Empleado

<h1>Crear Empleado</h1>

<form asp-action="CrearEmpleado" method="post">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Rol">Rol</label>
        <select asp-for="Rol" class="form-control">
            <option value="Mesero">Mesero</option>
            <option value="Cocina">Cocina</option>
            <option value="Admin">Admin</option>
            <option value="Cajero">Cajero</option>
        </select>
    </div>
    <div class="form-group">
        <label for="Contrasena">Contraseña</label>
        <input type="password" asp-for="Contrasena" class="form-control" required />        
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="ModificarEmpleados" class="btn btn-secondary">Cancelar</a>
</form>
