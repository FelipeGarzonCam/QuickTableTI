@model QuickTableProyect.Dominio.MenuItem

<div class="container">
    <h2>Editar Elemento del Menú</h2>

    <form asp-action="EditarMenuItem" method="post">
        <div class="form-group">
            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
        </div>

        <div class="form-group">
            <label for="Descripcion">Descripción</label>
            <textarea class="form-control" id="Descripcion" name="Descripcion" rows="3" required>@Model.Descripcion</textarea>
        </div>

        <div class="form-group">
            <label for="Categoria">Categoría</label>
            <select asp-for="Categoria" class="form-control" asp-items="@(new SelectList(ViewBag.Categorias, Model.Categoria))" required>
                <option value="">Seleccione una categoría</option>
            </select>
        </div>

        <div class="form-group">
            <label for="Precio">Precio</label>
            <input type="number" class="form-control" id="Precio" name="Precio" value="@(decimal.Truncate(Model.Precio))" min="0" required oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
        </div>

        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a href="@Url.Action("ModificarMenu", "Administrador")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
